<import src="../stars/star.wxml" />
<view class="container">
  <image class="head-img" src="{{movie.movieImg}}" mode="aspectFill" ></image>
  <view class="head-img-hover" data-imgUrl="{{movie.movieImg}}" catchtap='showMovieImg'>
    <text class="main-title">{{movie.title}}</text>
    <text class="sub-title">{{movie.country+"-"+movie.year}}</text>
    <view class="like">
      <text class="highlight-font">{{movie.wishCount}}</text>
      <text class="plain-font">人喜欢</text>
      <text class="highlight-font">{{movie.commentCount}}</text>
      <text class="plain-font">条评论</text>
    </view>
  </view>
  <image src="{{movie.movieImg}}" class="movie-img" data-imgUrl="{{movie.movieImg}}" catchtap='showMovieImg'></image>
  <view class="summary-top">
    <view class="original-title">
      <text>{{movie.originalTitle}}</text>
    </view>
    <view class="flex-row">
      <text class="mark">评分</text>
      <template is="starTemplate" data="{{stars:movie.stars,score:movie.score}}" />
    </view>
    <view class="flex-row">
      <text class="mark">导演</text>
      <text>{{movie.director}}</text>
    </view>
    <view class="flex-row">
      <text class="mark">影人</text>
      <text>{{movie.casts}}</text>
    </view>
    <view class="flex-row">
      <text class="mark">类型</text>
      <text>{{movie.generes}}</text>
    </view>
  </view>
  <view class="hr"></view>
  <view class="summary-middle">
    <text class="summary-mark">剧情简介</text>
    <text class="summary-content">{{movie.summary}}</text>
  </view>
  <view class="hr"></view>
  <view class="summary-bottom">
    <text class="summary-mark">影人</text>
    <scroll-view scroll-x="true"  enable-flex="true" class="casts-scroll">
      <block wx:for="{{movie.castsInfo}}" wx:for-item="cast" wx:key="1">
        <view class="cast-container">
          <image src="{{cast.img}}" class="cast-img"></image>
          <text class="cast-name">{{cast.name}}</text>
        </view>
      </block>
    </scroll-view>
  </view>
</view>