.post-container{
  display:flex;
  flex-direction: column;
  margin-top:20rpx;
  margin-bottom:40rpx;
  background-color:#fff;
  border-top:1px solid #ededed;
  border-bottom:1px solid #ededed;
  padding-bottom:10rpx;
}
.post-author-date{
  margin:10rpx 0rpx 20rpx 10rpx;
  display:flex;
  flex-direction: row;
  align-items: center;
}
.post-author{
  width:60rpx;
  height:60rpx;
}
.post-date{
margin-left:20rpx;
font-size:26rpx;
}
.post-title{
  font-size: 34rpx;
  font-weight: bold;
  margin-left:10px;
  margin-bottom:10px;
  color:#333;
}
.post-image{
  width:100%;
  height:340rpx;
  margin-bottom:15rpx;
}
.post-content{
  font-size:28rpx;
  color:#666;
  letter-spacing: 2rpx;
  margin-left:10rpx;
  margin-bottom:15rpx;
}
.post-like{
  display:flex;
  flex-direction:row;
  align-items: center;
  margin-left:20rpx;
  font-size:26rpx;
}
.post-like-image{
  width:32rpx;
  height:32rpx;
  margin-right:10rpx;
}
.post-like-text{
  margin-right:20rpx;
}